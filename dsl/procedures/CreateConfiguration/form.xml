<editor>
  <formElement>
    <type>entry</type>
    <property>config</property>
    <required>1</required>
    <documentation>The name for the created configuration</documentation>
    <label>Configuration Name</label>
  </formElement>
  <formElement>
    <type>entry</type>
    <property>desc</property>
    <required>0</required>
    <documentation>Configuration description</documentation>
    <label>Description</label>
  </formElement>
  <formElement>
    <type>entry</type>
    <property>endpoint</property>
    <required>1</required>
    <documentation>Third-party endpoint to connect to.</documentation>
    <label>Endpoint</label>
  </formElement>
  <formElement>
    <type>credential</type>
    <property>credential</property>
    <required>1</required>
    <label>Credential</label>
    <userNameLabel>Username</userNameLabel>
    <passwordLabel>Password</passwordLabel>
    <attachedAsParameterToStep>createConfiguration</attachedAsParameterToStep>
  </formElement>
  <formElement>
    <type>checkbox</type>
    <property>checkConnection</property>
    <label>Check Connection?</label>
    <checkedValue>true</checkedValue>
    <uncheckedValue>false</uncheckedValue>
    <initiallyChecked>1</initiallyChecked>
  </formElement>
  <!-- here goes proxy setup -->
    <formElement>
        <type>entry</type>
        <label>Proxy URL:</label>
        <property>httpProxyUrl</property>
        <required>0</required>
        <documentation>Proxy url</documentation>
    </formElement>
    <formElement>
        <type>credential</type>
        <label>Proxy Credentials:</label>
        <property>proxy_credential</property>
        <required>0</required>
        <documentation>Credentials to connect to proxy.</documentation>
        <attachedAsParameterToStep>createAndAttachCredential</attachedAsParameterToStep>
    </formElement>
  <!-- End of proxy setup -->
  <formElement>
    <type>select</type>
    <property>debugLevel</property>
    <required>0</required>
    <label>Debug Level</label>
    <option>
      <name>Info</name>
      <value>0</value>
    </option>
    <option>
      <name>Debug</name>
      <value>1</value>
    </option>
    <option>
      <name>Trace</name>
      <value>2</value>
    </option>
    <value>0</value>
  </formElement>
</editor>
